<div class="form">
  <%= form_for [@book, @review] do |f| %>
    <%= f.label :title %>
    <%= f.text_field :title %>

    <%= f.label :rating %>
    <%= f.text_field :rating %>

    <%= f.label :description %>
    <%= f.text_field :description %>

    <%= f.label :user %>
    <%= f.text_field :user %>

    <%= f.submit %>
  <% end %>
</div>
